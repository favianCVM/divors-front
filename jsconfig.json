{
	"compilerOptions": {
		"baseUrl": "./src",
		"jsx": "react",
		"paths": {
			"@pages/*": ["pages/*"],
			"@models/*": ["models/*"],
			"@config/*": ["config/*"],
			"@components/*": ["components/*"],
			"@containers/*": ["containers/*"],
			"@utils/*": ["utils/*"],
			"@reducers/*": ["state/reducers/*"],
			"@actions/*": ["state/actions/*"],
			"@styles/*": ["styles/*"],
			"@assets/*": ["assets/*"]
		}
	},
	"exclude": ["node_modules", "**/node_modules/*"]
}
